<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item android:left="-1.0dip" android:top="-1.0dip" android:right="-1.0dip">
                <shape>
                    <solid android:color="@color/white" />
                    <stroke android:width="1.0dip" android:color="@drawable/bg_product_screen" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="true">
        <layer-list>
            <item android:bottom="5.0px">
                <shape>
                    <solid android:color="@color/white" />
                    <stroke android:width="5.0px" android:color="@color/holo_orange_dark" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>